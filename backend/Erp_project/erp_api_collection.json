              "request": {
                "method": "POST",
                "header": [
                  { "key": "Content-Type", "value": "application/json" },
                  { "key": "Accept", "value": "application/json" },
                  { "key": "Authorization", "value": "Bearer {{token}}" }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n    \"client_name\": \"Draft Client\",\n    \"total\": 2000.00,\n    \"status\": \"draft\"\n}"
                },
                "url": {
                  "raw": "{{base_url}}/api/accounting/invoices",
                  "host": ["{{base_url}}"],
                  "path": ["api", "accounting", "invoices"]
                }
              },
              "response": []
            },
            {
              "name": "Create Invoice (sent - triggers journal entry)",
              "request": {
                "method": "POST",
                "header": [
                  { "key": "Content-Type", "value": "application/json" },
                  { "key": "Accept", "value": "application/json" },
                  { "key": "Authorization", "value": "Bearer {{token}}" }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n    \"client_name\": \"ABC Client\",\n    \"total\": 5000.00,\n    \"status\": \"sent\"\n}"
                },
                "url": {
                  "raw": "{{base_url}}/api/accounting/invoices",
                  "host": ["{{base_url}}"],
                  "path": ["api", "accounting", "invoices"]
                }
              },
              "response": []
            },
            {
              "name": "Update Invoice Status (draft to sent triggers journal entry)",
              "request": {
                "method": "PATCH",
                "header": [
                  { "key": "Content-Type", "value": "application/json" },
                  { "key": "Accept", "value": "application/json" },
                  { "key": "Authorization", "value": "Bearer {{token}}" }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n    \"status\": \"sent\"\n}"
                },
                "url": {
                  "raw": "{{base_url}}/api/accounting/invoices/{{invoice_id}}/status",
                  "host": ["{{base_url}}"],
                  "path": ["api", "accounting", "invoices", "{{invoice_id}}", "status"]
                }
              },
              "response": []
            }
          ]
        },
        {
          "name": "Payments (Auto Journal Entry)",
          "description": "Payment management.\n\nAutomatic journal entry generation on every payment:\n- Debit: Cash/Bank (payment amount)\n- Credit: Accounts Receivable (payment amount)\n\nValidation: Payment amount cannot exceed invoice total.",
          "item": [
            {
              "name": "Get All Payments",
              "request": {
                "method": "GET",
